<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Account">

        <EditTextPreference
            app:key="signature"
            app:title="Your Name"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Accessibility">

        <SwitchPreferenceCompat
            app:key="sync"
            app:summaryOff="Normal Text "
            app:summaryOn="Larger Text"
            app:title="Enlarge Fontsize" />

        <SwitchPreferenceCompat

            app:key="attachment"
            app:summaryOff="Normal Text"
            app:summaryOn="Bold Text"
            app:title="Bold" />

    </PreferenceCategory>


</PreferenceScreen>